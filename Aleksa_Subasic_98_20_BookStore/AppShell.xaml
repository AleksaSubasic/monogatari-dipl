<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Aleksa_Subasic_98_20_BookStore.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Aleksa_Subasic_98_20_BookStore"
    xmlns:views="clr-namespace:Aleksa_Subasic_98_20_BookStore.Views">

    <TabBar>
        <Tab Title="Home" Icon="home_nav.svg" >
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab Title="Explore" Icon="explore_nav.svg">
            <ShellContent ContentTemplate="{DataTemplate views:ExplorePage}" Route="ExplorePage" />
        </Tab>
        <Tab Title="Cart" Icon="cart_nav.svg">
            <ShellContent ContentTemplate="{DataTemplate views:CartPage}" Route="CartPage" />
        </Tab>
        <Tab Title="Favorites" Icon="fav_nav.svg">
            <ShellContent ContentTemplate="{DataTemplate views:FavoritesPage}" Route="FavoritesPage" />
        </Tab>
        <Tab Title="Profile" Icon="profile_nav.svg">
            <ShellContent ContentTemplate="{DataTemplate views:ProfilePage}" Route="ProfilePage" />
        </Tab>
    </TabBar>

</Shell>